class Split_brainTest(CTSTest):
####################################################################
    '''It is used to test split-brain. when the path between the two nodes break
       check the two nodes both take over the resource'''
    def __init__(self,cm,timeout=60):
        CTSTest.__init__(self,cm)
        self.name = "Split_brain"
        self.timeout = timeout

    def __call__(self, node):
        '''Perform split-brain test'''
        self.incr("calls")

        for node in self.CM.Env["nodes"]:
            if self.CM.ShouldBeStatus[node] == self.CM["down"]:
                return self.skipped()

        cf = HBConfig()
        
        IPaddr = None
        for reslist in cf.ResourceGroups.keys():
            line = cf.ResourceGroups[reslist]
            for res in line.resourcelist:
                token = res.name
                if re.match("^[0-9]+\.[0-9]+\.[0-9]+\.[0-9]+$",token):
                   IPaddr = token
                   break

        if IPaddr==None:
            self.failure("Cannot find the IPaddr resource to test")

	'''If there are redundant path, break the paths'''
        eths = []
        serials = []
        for cfp in cf.Parameters:
            if cfp == "bcast":
                eths = cf.Parameters["bcast"]
            if cfp == "mcast":
                if cf.Parameters["mcast"][0] not in eths:
                   eths.append(cf.Parameters["mcast"][0])
            if cfp == "ucast":
                if cf.Parameters["ucast"][0] not in eths:
                    eths.append(cf.Parameters["mcast"][0])
            if cfp == "serial":
               serials = cf.Parameters["serial"]

        for eth in eths:
            self.CM.rsh(node,"ifconfig %s down" % eth)
        for serial in serials:
            self.CM.rsh(node,"setserial %s uart none" % serial)

        done = time.time()+self.timeout+1

	# FIXME: This next loop should probably be redone
	# be using the resource operations and objects not some
	# hard-wired command and output.  You may need to
	# hardwire the resource type, but not the command, output, etc.
	# in fact, this will fail to work even for heartbeat in the future.

        for node in self.CM.Env["nodes"]:
            while (time.time() < done):
                line = self.CM.rsh.readaline(node,self.CM["IPaddrCmd"] % IPaddr)
                if re.search("running",line):
                    break
                else:
                    time.sleep(1)

        if eths != []:
            for eth in eths:
                self.CM.rsh(node,"ifconfig %s up" % eth)
        if serials != []:
            for serial in serials:
                self.CM.rsh(node,"setserial %s uart 16550" % serial)
        if time.time() > done():
            return self.failure("Both nodes don't both take over resources.")
          
        done = time.time()+self.timeout+1
        while time.time() < done:
            for audit in CTSaudits.AuditList(self.CM):
                if not audit():
                   time.sleep(1)
                   break

        if time.time() > done:
           for node in self.CM.Env["nodes"]:
               self.CM.rsh(node,"@sysconfdir@/init.d/heartbeat restart")
               return self.failure("Split brain")

        return self.success()

    def is_applicable(self):
        '''Split_brain is applicable'''
        return 1

