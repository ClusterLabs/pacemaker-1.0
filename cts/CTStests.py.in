class RedundantpathTest(CTSTest):
##########################################################################
    '''In heartbeat, it has redundant path to communicate between the cluster'''
    def __init__(self,cm,timeout=60):
        CTSTest.__init__(self,cm)
        self.name = "RedundantpathTest"
        self.timeout = timeout 

    def PathCount(self):
        '''Return number of communication paths'''
        cf = HBConfig()
	eths = []
	serials = []
        num = 0
        for cfp in cf.Parameters:
            if cfp == "bcast":
                eths = cf.Parameters["bcast"]
                for eth in eths:
                    num = num+1
            if cfp == "mcast":
                if cf.Parameters["mcast"][0] not in eths:
                   eths.append(cf.Parameters["mcast"][0])
                   num = num+1
            if cfp == "ucast":
                if cf.Parameters["ucast"][0] not in eths:
                    eths.append(cf.Parameters["mcast"][0])
                    num = num+1
            if cfp == "serial":
                serials=cf.Parameters["serial"]
                for serial in serials:
                    num = num+1

	return (num, eths, serials)

    def __call__(self,node):
        '''Perform redundant path test'''
        self.incr("calls")
        if self.CM.ShouldBeStatus[node]!=self.CM["up"]:
            return self.skipped()
    
        cf = HBConfig()
        num = 0
        PathDown = None
        eths = []
        serials = []
        for cfp in cf.Parameters:
            if cfp == "bcast":
                eths = cf.Parameters["bcast"]
                for eth in eths:
                    num = num+1
            if cfp == "mcast":
                if cf.Parameters["mcast"][0] not in eths:
                   eths.append(cf.Parameters["mcast"][0])
                   num = num+1
            if cfp == "ucast":
                if cf.Parameters["ucast"][0] not in eths:
                    eths.append(cf.Parameters["mcast"][0])
                    num = num+1
            if cfp == "serial":
                serials=cf.Parameters["serial"]
                for serial in serials:
                    num = num+1

        (num, eths, serial) = PathCount()
        if num <= 1:
            return self.failure("There is only one path between the two nodes, please reconfigure.")

        for eth in eths:
            if self.CM.rsh(node,"ifconfig %s down" % eth)==0:
                PathDown = "OK"
                break
        
        if PathDown != "OK":
            for serial in serials:
                if self.CM.rsh(node,"setserial %s uart none" % serial)==0:
                    PathDown = "OK"
                    break
                   
        if PathDown != "OK":
            return self.failure("Cannot break the path")
        
        time.sleep(self.timeout)

        for audit in CTSaudits.AuditList(self.CM):
            if not audit():
                for eth in eths:
                    self.CM.rsh(node,"ifconfig %s up" % eth)
                for serial in serials:
                    self.CM.rsh(node,"setserial %s uart 16550" % serial) 
                return self.failure("Redundant path fail")

        for eth in eths:
            self.CM.rsh(node,"ifconfig %s up" % eth)
        for serial in serials:
            self.CM.rsh(node,"setserial %s uart 16550" % serial)
       
        return self.success()

    def is_applicable(self):
        '''It is always applicable'''
        return self.PathCount()[0] > 1

AllTestClasses.append(RedundantpathTest)

