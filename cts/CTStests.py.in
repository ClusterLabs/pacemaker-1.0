class BandwidthTest(CTSTest):
##############################################################################
    '''Test the bandwidth which heartbeat uses'''
    def __init__(self, cm):
        CTSTest.__init__(self, cm)
        self.name = "Bandwidth"
	
    def __call__(self, node):
        '''Perform the Bandwidth test'''
        self.incr("calls")
        
        if self.CM.ShouldBeStatus[node]!=self.CM["up"]:
            return self.skipped()
            
        cf = HBConfig()
        eth = None
        for cfp in cf.Parameters:
            if cfp == "bcast":
                eth=cf.Parameters["bcast"][0]
                break
            if cfp == "mcast":
                eth = cf.Parameters["mcast"][0]
                break
            if cfp == "ucast":
                eth = cf.Parameters["ucast"][0]
                break

        if eth == None:
            return self.skipped()

        port=None
        for cfp in cf.Parameters:
            if cfp == "udpport":
                port = cf.Parameters["udpport"][0]
                break
        if port == None:
            port =  694
        
        bandwidth = 0.0 
        for i in 1,2,3,4,5:
            self.CM.rsh(node,"tcpdump -c 100 -i %s udp port %s > /tmp/band_estimate 2>&1" % (eth,port))
            self.CM.rsh.cp("%s:/tmp/band_estimate" % node, "/tmp")
            file = open("/tmp/band_estimate","r")
            file.seek(0)
            count = 0
            while 1:
                line = file.readline()
                if re.search("udp",line):
                    count=count+1
                    linesplit = string.split(line," ")
                    for j in range(6):
                        if linesplit[j]=="udp": break
                    sum = int(linesplit[j+1])
                    T1 = linesplit[0]
                    timesplit = string.split(T1,":")
                    time2split = string.split(timesplit[2],".")
                    time1 = (long(timesplit[0])*60+long(timesplit[1]))*60+long(time2split[0])+long(time2split[1])*0.000001
                    break

            while count < 100:
                line = file.readline()
                if re.search("udp", line):
                    count = count+1
                    linessplit = string.split(line," ")
                    for j in range(6):
                        if linessplit[j] =="udp": break
                    sum=int(linessplit[j+1])+sum

            T2 = linessplit[0]
            timesplit = string.split(T2,":")
            time2split = string.split(timesplit[2],".")
            time2 = (long(timesplit[0])*60+long(timesplit[1]))*60+long(time2split[0])+long(time2split[1])*0.000001
            time = time2-time1
            bandwidth = (sum+28*100)*8/time+bandwidth
            self.CM.rsh(node,"rm /tmp/band_estimate")
            os.system("rm /tmp/band_estimate")
        bandwidth = bandwidth/5
        
        if bandwidth != 0.0:
             self.CM.log("Bandwidth used to heartbeat is %f bit/s" % bandwidth)
             return self.success()
        else:
            return self.failure("no response!")

    def is_applicable(self):
        '''BandwidthTest is always applicable'''
        return 1

