                resources = resources + node_resource
                node_constraint=("""
      <rsc_location id="run_%s" rsc="%s">
        <rule id="pref_run_%s" score="100" boolean_op="and">
          <expression attribute="#uname" operation="eq" value="%s"/>
        </rule>
      </rsc_location>""" % ("rsc_"+node, "rsc_"+node, "rsc_"+node, node))
