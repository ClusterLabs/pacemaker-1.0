# This script sets the site of node 


HA_DIR=@sysconfdir@/ha.d
. ${HA_DIR}/shellfuncs

usage() {
	echo "usage: hb_setsite <node> <site>"
	exit 1
}

if 
  [ $# = 0 ]
then
	usage
fi


if [ "$1" = "--help" ]; then
	usage
fi

ha_clustermsg <<-!MSG
	t=setsite
	node=$1
	site=$2
!MSG


