import sys
sys.path.append("@libdir@/heartbeat")

from pymgmt import *
from select import *
import sys

if __name__=="__main__" :
	server = "127.0.0.1"
	username = "hacluster"
	password = "hacluster"
	messages = []
	
	skipthis=False
	args=sys.argv[1:]
	for i in range(0, len(args)) :
		if skipthis :
           		skipthis=False
			continue
		elif args[i] == "-s" :
			skipthis=True
			server = args[i+1]
		elif args[i] == "-u" :
			skipthis=True
			username = args[i+1]
		elif args[i] == "-p" :
			skipthis=True
			password = args[i+1]
		elif args[i] == "-h" :
			print "usage : %s [-s server] [-u username] [-p password] msg_type field1 ..."
			sys.exit()
		else :
			messages = args[i:]
			break
				
	if mgmt_connect(server,username,password) == -1:
		print "login failed"
		sys.exit()
 	
	print "---------------------------"
	command = ""
	for i in messages:
		command = command + i +"\n"
	command = command[:-1]
		
	print mgmt_sendmsg(command)
	print "---------------------------"
 	
	mgmt_disconnect()
	
		
	
