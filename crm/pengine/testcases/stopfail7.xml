<?xml version="1.0"?>
<!DOCTYPE cib SYSTEM "crm-1.0.dtd">
<!-- stontih resource must be shutdown first -->
<cib>
 <configuration>
  <nodes>
    <node id="node1" uname="node1" type="member"/>
    <node id="node2" uname="node2" type="member"/>
  </nodes>
  <resources>
     <resource id="rsc1" class="heartbeat" type="apache" priority="1.0" 
	       on_stopfail="stonith"/>
     <resource id="stonith1" class="stonith" type="uml" priority="1.0" 
	       on_stopfail="stonith"/>
  </resources>
  <constraints>
      <rsc_location id="run_rsc1" rsc="rsc1">
	<rule id="can1" result="can"/>
      </rsc_location>
      <rsc_location id="run_stonith1" rsc="stonith1">
	<rule id="can1" result="can"/>
      </rsc_location>
  </constraints>
  <crm_config>
    <nv_pair id="failed_nodes" name="failed_nodes" value="stonith"/>
  </crm_config>
 </configuration>
 <status>
    <node_state id="node1" uname="node1" crmd="online" join="member" expected="member" timestamp="1086187789" in_ccm="true">
      <lrm>
	<lrm_agents>
	  <lrm_agent class="heartbeat" type="apache"/>
	</lrm_agents>
        <lrm_resources>
          <lrm_resource id="rsc1" last_op="stop" rsc_state="failed" op_status="4" on_node="hadev"/>
        </lrm_resources>
      </lrm>
    </node_state>
    <node_state id="node2" uname="node2" crmd="online" join="member" expected="member" timestamp="1086187789" in_ccm="true">
      <lrm>
	<lrm_agents>
	  <lrm_agent class="heartbeat" type="apache"/>
	</lrm_agents>
        <lrm_resources>
          <lrm_resource id="stonith1" last_op="start" rsc_state="started" op_status="0" rc_code="0" on_node="hadev">
	    <can_fence id="node1"/>
	  </lrm_resource>
        </lrm_resources>
      </lrm>
    </node_state>
 </status>
</cib>
